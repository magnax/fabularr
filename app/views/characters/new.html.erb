<h1><%= t 'views.characters.new.title' %></h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@character) do |f| %>

    <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :gender %>
      <%= f.select :gender, [[t('select'), ''], [t('female'), 'K'], [t('male'), 'M']] %>

      <%= f.submit I18n.t 'views.characters.new.create', class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>
