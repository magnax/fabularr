<h1><%= t 'views.sessions.new.title' %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit I18n.t 'views.layout.login', class: "btn btn-large btn-primary" %>
    <% end %>

    <p><%= t 'new_user' %>? <%= link_to I18n.t('views.layout.register'), register_path %></p>
  </div>
</div>
